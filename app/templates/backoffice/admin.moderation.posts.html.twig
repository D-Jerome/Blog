
{% extends './layouts/pagination.html.twig' %}

{% block content %}    
<header class="masthead" style="background-image: url('/blog-project/public/img/groupe.png')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7 text-center">
                <div class="post-heading">
                     <h1>Modération des posts</h1>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</header> 
 
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Contenu</th>
                        <th scope="col">Créé le </th>
                        <th scope="col">Par</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                    {% if post.publishState != false %}
                    <tr id="{{ post.id }}">
                    {% else %}
                    <tr id="{{ post.id }}" class="table-danger" >
                    {% endif %}
                        <th scope="row">{{ post.id }}</th>
                        <td>{{ post.name | raw}}</td>
                        <td><div class="clearfix">{{ post.excerptContent | raw }}</div></td>
                        <td>{{ post.createdAt | format_datetime(locale='fr') }}</td>
                        <td>{{ post.username }}</td>
                        <td><a href="/blog-project/admin/post/modify/{{ post.slug }}/{{ post.id }}" class="btn " title="Modifier"><i class="fa-solid fa-pen-to-square"></i></a>
                        {% if post.publishState != false %}
                            <a href="/blog-project/admin/post/unpublish/{{ post.slug }}/{{ post.id }}" class="btn " title="Désactiver"><i class="fa-solid fa-toggle-on fa-2xl" style="color: var(--bs-success);"></i></a>
                        {% else %}
                            <a href="/blog-project/admin/post/publish/{{ post.slug }}/{{ post.id }}" class="btn" title="Activer"><i class="fa-solid fa-toggle-off fa-2xl" style="color: var(--bs-danger);"></i></a>
                        {% endif %}
                    </tr>
                    {% endfor %}
                </tbody>
                </table>
{% endblock %}