
{% extends './layouts/connection.html.twig' %}

{% block content %}    
<h1>Modération des posts</h1>         
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Contenu</th>
                        <th scope="col">Créé le </th>
                        <th scope="col">Par</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                    {% if post.publishState != false %}
                    <tr>
                    {% else %}
                    <tr class="table-danger" >
                    {% endif %}
                        <th scope="row">{{ post.id }}</th>
                        <td>{{ post.name | raw}}</td>
                        <td><div class="clearfix">{{ post.content | raw }}</div></td>
                        <td>{{ post.createdAt }}</td>
                        <td>{{ post.username }}</td>
                        <td><a href="/blog-project/admin/post/modify/{{ post.slug }}/{{ post.id }}" class="btn btn-warning">Modifier</a> 
                        {% if post.publishState != false %}
                            <a href="/blog-project/admin/post/unpublish/{{ post.slug }}/{{ post.id }}" class="btn btn-danger">Désactiver</a> </td>
                        {% else %}
                            <a href="/blog-project/admin/post/publish/{{ post.slug }}/{{ post.id }}" class="btn btn-success">Activer</a> </td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                </tbody>
                </table>
{% endblock %}