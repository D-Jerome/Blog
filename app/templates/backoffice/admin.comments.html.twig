
{% extends './layouts/connection.html.twig' %}

{% block content %}    
{% if authUser.roleName == "admin" %}
    <h1>Administration des commentaires</h1>
{% else %}
    <h1>Mes commentaires</h1>             
{% endif %}
            <a href="/blog-project/admin/comment/new" class="btn btn-primary">Ajouter un commentaire</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Extrait</th>
                        <th scope="col">Publié le </th>
                        <th scope="col">Par</th>
                        <th scope="col"> Action </th>
                    </tr>
                </thead>
                <tbody>
                    {% for comment in comments %}
                    {% if comment.publishState != false %}
                        <tr>
                    {% else %}
                        <tr class="table-danger" >
                    {% endif %}
                   
                            <th scope="row">{{ comment.id }}</th>
                            <td>{{ comment.content | raw }}</td>
                            <td>{{ comment.createdAt }}</td>
                            <td>{{ comment.username }}</td>
                            <td><a href="/blog-project/post/{{ comment.id }}/{{ comment.postId }}" class="btn btn-secondary ">Voir le post</a> 
                            <a href="/blog-project/admin/comment/modify/{{ comment.id }}/{{ comment.postId }}" class="btn btn-warning ">Modifier</a>
                            {% if authUser.roleName == "admin" %}
                                {% if comment.publishState != false %}
                                    <a href="/blog-project/admin/comment/unpublish/{{ comment.id }}/{{ comment.postId }}" class="btn btn-danger">Désactiver</a> </td>
                                {% else %}
                                    <a href="/blog-project/admin/comment/publish/{{ comment.id }}/{{ comment.postId }}" class="btn btn-success">Activer</a> </td>
                                {% endif %}
                            {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                </table>
{% endblock %}