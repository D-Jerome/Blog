
{% extends './layouts/connection.html.twig' %}

{% block content %} 
            <h1>Modification de commentaire</h1>            
            <div class="col-md-10">            
                <div class="card mb-3 bg-secondary bg-gradient text-light">
                    <div class="card-body">
                        <p class="text-muted text-white bg-light">{{ comment.createdAt }}</p>
                        <p class="card-text">{{ comment.content | raw }} </p>
                    </div>
                </div>
            </div>
            <div class="col-md-10 border border-dark"> 
                <form action="" method="post"> 
                <div class="form-group">
                    <label id="content">Contenu de l'article</label>
                    <textarea class="form-control" rows="8" id="content" name="content" >{{ comment.content | raw }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modifier</button>
                </form> 
            </div>    

{% endblock %}