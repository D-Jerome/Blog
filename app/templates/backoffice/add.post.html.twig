
{% extends './layouts/connection.html.twig' %}

{% block content %} 
                       <header class="masthead" style="background-image: url('')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="post-heading">
                            <h1>Ajout d'article</h1>   
                        </div>
                    </div>
                </div>
            </div>
        </header>
            
            
        <article class="mb-3">            
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">      
                    <form action="" method="post">
                        <div class="form-group">
                            <label id="name">Titre de l'article</label>
                            <input class="form-control" type="text" id="name"  name="name" value="" required>
                        </div>
                        <div class="form-group">
                        Cat√©gories:
                        {% for category in categories %}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="{{ category.id }}" name="categoryId[]" id="cat-{{ category.name }}-{{ category.id }}">
                                <label class="form-check-label" for="cat-{{ category.name }}-{{ category.id }}">{{ category.name }}</label>
                            </div>
                            {% endfor %}    
                        <div class="form-group">
                            <label id="content">Contenu de l'article</label>
                            <textarea class="form-control" rows="15" id="content" name="content"></textarea>
                        </div>
                        <input type="hidden" name="userId" id="hiddenUser" value="{{ authUser.id}}" />
                        <button type="submit" class="mt-3 btn btn-primary float-end">Ajouter</button>
                    </form> 
                </div>
            </article>

{% endblock %}