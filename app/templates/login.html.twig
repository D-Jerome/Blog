{% extends './layouts/connection.html.twig' %}


{% block content %}



<h1 class="mx-auto">Se connecter</h1>
    {% if error %}
        <div class="col-10 alert alert-danger " role="alert">
            <h4 class="alert-heading">Connexion impossible</h4>
            <hr>
            <p class="mb-0">L'identifiant et/ou mot de passe incorrect.</p>
        </div>
    {% endif %} 
    <div class="col-md-10 mt-4 border border-dark">

        <form action="/blog-project/login" method="post">
            <div class="form-group mt-4">
                <input class="form-control" type="text" name="login" placeholder="Identifiant">
            </div>
            <div class="form-group">
                <input class="form-control" type="password"  name="password" placeholder="Mot de passe">
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Connexion</button>
            </div>
        </form>
        <a href="/blog-project/login/forgot">Mot de passe oubli√©</a>
    </div>
{% endblock %}