

{% extends './layouts/connection.html.twig' %}

{% block content %}             
            <div class="col-md-10">            
                <div class="card mb-3 bg-secondary bg-gradient text-light">
                    <div class="card-body">
                        <h5 class="car-title text-warning">{{ post.name }}</h5>
                        <p class="text-muted text-white bg-light">{{ post.createdAt }}</p>
                        <pclass="card-text">{{ post.content }} </p>
                    </div>
                </div>
            </div>
            {% if comments %}
            <h2> Commentaires </h2>
            {% endif %}
            {% for comment in comments %}
            
            <div class="col-md-10">            
                <div class="card mb-3 bg-white bg-gradient ">
                    <div class="card-body">
                        <p class="car-title badge bg- text-warning">par {{ comment.user }} le {{ comment.createdAt }}</p>
                        <p class="card-text">{{ comment.content }} </p>
                    </div>
                </div>
            </div>
            {% endfor %}

{% endblock %}