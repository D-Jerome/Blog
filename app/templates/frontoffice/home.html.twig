{% extends './layouts/connection.html.twig' %}

{% block content %}
{% if error %}
    <div class="col-10 alert alert-danger " role="alert">
        <h4 class="alert-heading">Connexion impossible</h4>
        <hr>
        <p class="mb-0">Authorisation requise</p>
    </div>
    
{% endif %} 
<header class="masthead" style="background-image: url('/blog-project/public/img/blogwcloud2.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7 text-center">
                <div class="post-heading">
                    <h1>Présentation du créateur de ce blog</h1>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</header>
<h2 class="col-12">Bonjour {{ authUser.name }} </h2>
<main role="main" class="site-content">
    <div class="text-bg-dark rounded-pill py-4">
        <div class="container">
            <div class="row h-25">
                <div class="col-lg-3 text-center">
                    <img src="/blog-project/public/img/photo.png" class="py-auto rounded-circle h-100 w-100" alt="photo" >
                </div>
                <div class="text-bg-dark rounded-pill col-lg-9 text-center ">
                    <h2>Dubus Jérôme</h2>
                    <h3>Étudiant développeur d'applications PHP / Symfony chez OpenClassrooms</h3>
                    <br>
                    <a href="/blog-project/public/doc/moncv.pdf" type="button" class="btn btn-primary">Mon cv</a>
                </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row gx-4 gx-lg-5 mt-4 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">     
            <div class="form-group text-center">
                <h3>Me contacter</h3>
                <form method="post" action="">
                    <div class="row">
                        <div class="col-lg-6 pt-3">
                            <input type="text" name="name" class="form-control text-center" placeholder="Nom et prénom" required>
                        </div>
                        <div class="col-lg-6 pt-3">
                            <input type="email" name="email" class="form-control text-center" placeholder="Adresse email" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col pt-3">
                            <textarea name="content" class="form-control" rows="4" id="message" required></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col pt-3">
                            <input class="btn btn-primary" type="submit" value="Envoyer">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

{% endblock %}