
{% extends './layouts/connection.html.twig' %}

{% block content %} 
            <h1>Modification de l'utilisateur</h1>            
            <div class="col-md-10">            
                <div class="card mb-3 bg-secondary bg-gradient text-light">
                    <div class="card-body">
                        <h5 class="card-title ">{{ users.username }}</h5>
                        <p class="text-white ">depuis le {{ users.createdAt }}</p>
                        <pclass="card-text">{{ users.email }} </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-10 border border-dark"> 
                <form action="" method="post">
                <div class="form-group">
                    <label id="name">identifiant:</label>
                    <input class="form-control" type="text" id="name"  name="name" value="{{ users.username|raw }}">
                </div>    
                <div class="form-group">
                    <label id="content">email:</label>
                    <textarea class="form-control" rows="8" id="content" name="content" >{{ users.email|raw }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modifier</button>

                
                </form> 
            </div>    

{% endblock %}