
{% extends './layouts/connection.html.twig' %}

{% block content %} 
            <h1>Ajout d'article</h1>            
            
            <div class="col-md-10 border border-dark"> 
                <form action="" method="post">
                <div class="form-group">
                    <label id="name">Titre de l'article</label>
                    <input class="form-control" type="text" id="name"  name="name" value="">
                </div>
                <div class="form-group">
                   Cat√©gories:
                   {% for category in categories %}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="{{ category.id }}" name="categoryId[]" id="cat-{{ category.name }}-{{ category.id }}">
                        <label class="form-check-label" for="cat-{{ category.name }}-{{ category.id }}">{{ category.name }}</label>
                    </div>
                    {% endfor %}    
                <div class="form-group">
                    <label id="content">Contenu de l'article</label>
                    <textarea class="form-control" rows="15" id="content" name="content" ></textarea>
                </div>
                <input type="hidden" name="userId" id="hiddenUser" value="{{ authUser.id}}" />
                <button type="submit" class="btn btn-primary">Ajouter</button>

                
                </form> 
            </div>    

{% endblock %}